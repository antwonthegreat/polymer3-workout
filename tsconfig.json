{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "allowJs": true,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "node_modules/**/*",
    "webpack.config.js",
    "test/**/*"
  ]
}